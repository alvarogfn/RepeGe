rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /usernames/{username} {
      allow create: if 
        request.resource.data.uid == request.auth.uid &&
        request.resource.data.size() == 1 &&
        request.resource.data.uid is string;

      allow read;
    }
    match /users/{user} {
      allow create: if
          request.auth != null &&
          request.auth.uid == user &&
          request.resource.data.username is string;
          // get(/databases/{database}/documents/usernames/$(request.resource.data.username)).data.uid == user;
      allow read, update, delete: if request.auth.uid == user
    }
    match /sheets/{sheet} {
      allow write: if 
        request.auth != null &&
        request.auth.uid == request.resource.data.ownerUID;
      
      allow delete: if
        request.auth != null &&
        request.auth.uid == resource.data.ownerUID;

      allow read: if
        request.auth != null &&
        request.auth.uid == resource.data.ownerUID;

      match /spells/{spell} {
        allow write: if
          request.auth.uid != null &&
          request.auth.uid == get(/databases/$(database)/documents/sheets/$(sheet)).data.ownerUID;
 
        allow read;
      }

      // : if
      // request.auth.uid == resource.data.creatorUID;
    }
  }
}